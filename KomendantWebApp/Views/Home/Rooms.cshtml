@model dynamic

@{
    ViewBag.Title = "Кімнати";
}

<h2>Кімнати</h2>
<div ng-controller="RoomController">
    <a href="#" class="btn btn-primary" ng-click="open()">Додати</a>
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Номер кімнати</th>
            <th>Вмістимість</th>
            <th>Проживають</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="item in list" ng-click="modify(item);">
            <td>{{$index + 1}}</td>
            <td>{{item.name}}</td>
            <td>{{item.capacity}}</td>
            <td><span ng-repeat="person in item.persons">{{person.name}}{{$last == false ? ',' : ''}}</span></td>
        </tr>
        </tbody>
    </table>
</div>