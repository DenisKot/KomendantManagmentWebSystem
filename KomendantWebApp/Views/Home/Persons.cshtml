@model dynamic

@{
    ViewBag.Title = "Люди";
}

<h2>Люди</h2>
<div ng-controller="PersonController">
    <a href="#" class="btn btn-primary" ng-click="open()">Додати</a>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Ім'я</th>
                <th>Дата заселення</th>
                <th>Сплатив</th>
                <th>Кімната</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in list" ng-click="modify(item);">
                <td>{{$index + 1}}</td>
                <td>{{item.name}}</td>
                <td>{{item.date}}</td>
                <td>
                    <md-checkbox ng-model="item.isPayed" ng-disabled="true" aria-label="Checkbox 1" style="margin: 0;">
                    </md-checkbox>
                </td>
                <td>{{item.room.name}}</td>
            </tr>
        </tbody>
    </table>
</div>